pipeline {
	agent any
	stages {
		stage('build') {
			steps {
				sh 'echo "Stage build----->Fallo"'
				sh ''' echo "Mensaje multilinea--primera linea"
					echo "MEnsaje multilinea-segunda linea"'''
			}
		}
		stage('test') {
			steps {
				sh 'echo "Stage--->Test---Fail....!!"' //; exit 1'
			}
		}
	}
	
	post {
		always {
			echo 'Always---->This will always run'
		}
		success{
			echo 'Success--->This will only run if successful'
		}
		failure{
			echo 'Failure--->This will only run if failure'
		}
		unstable{
			echo 'Unstable-->This will only run if marked as unstable'
			echo 'Ustable--->ie. some tests failing'
		}
		changed{
			echo 'Changed-->This will only run if the state fo the Pipeline has changed'
			echo 'Changed-->for example if the pipeline was previously failing but now is successful'
		}
	}
}
